@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h2>For this week ! for every week </h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/css/img/٢٠٢٢١٢٠٤_١٧٥٦١٩.jpg" alt="Gezond" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Gezond</h3>
                    <p>LA is always so much fun!</p>
                </div>
            </div>

            <div class="item">
                <img src="~/css/img/٢٠٢٢١٢٠٤_١٧٥٧٣٠.jpg" alt="Lekker" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Lekker</h3>
                    <p>Thank you, Chicago!</p>
                </div>
            </div>

            <div class="item">
                <img src="~/css/img/٢٠٢٢١٢٠٤_١٧٥٨٣٣.jpg" alt="Sterk" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Sterk</h3>
                    <p>We love the Big Apple!</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
